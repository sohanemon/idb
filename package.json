  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:list": "vitest list",
    "test:log": "vitest run --reporter verbose",
    "test:ui": "vitest --ui",
    "playground": "vite --config playground/vite.config.ts",
    "build:playground": "vite build --config playground/vite.config.ts",
    "check": "biome check .",
    "fix": "biome check --diagnostic-level=error --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write --unsafe .",
    "format": "biome format .",
    "format:write": "biome format . --write",
    "typecheck": "tsgo --noEmit",
    "release": "tsgo --noEmit && npm run build && npm publish"
  },
  "keywords": [
    "use-indexeddb",
    "indexeddb",
    "idb",
    "localstorage"
  ],
  "license": "ISC",
